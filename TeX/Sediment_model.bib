	author = {Archer, D. E. and Morford, J. L. and Emerson, S. R.},
	month = mar,
	year = {2002},
	keywords = {4804 Oceanography: Biological and Chemical: Benthic processes/benthos, 4805 Biogeochemical cycles, processes, and modeling, 4851 Oxidation/reduction reactions, 4863 Sedimentation, Diagenesis},
