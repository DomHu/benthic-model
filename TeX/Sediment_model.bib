@article{sinninghe_damste_co2_2010,
	title = {A {CO}2 decrease-driven cooling and increased latitudinal temperature gradient during the mid-{Cretaceous} {Oceanic} {Anoxic} {Event} 2},
	volume = {293},
	issn = {0012-821X},
	url = {http://www.sciencedirect.com/science/article/pii/S0012821X10001299},
	doi = {10.1016/j.epsl.2010.02.027},
	abstract = {The mid-Cretaceous is thought to be a greenhouse world with significantly higher atmospheric pCO2 and sea-surface temperatures as well as a much flatter latitudinal thermal gradient compared to the present. This time interval was punctuated by the Cenomanian/Turonian Oceanic Anoxic Event (OAE-2, ∼ 93.5 Myr ago), an episode of global, massive organic carbon burial that likely resulted in a large and abrupt pCO2 decline. However, the climatic consequences of this pCO2 drop are yet poorly constrained. We determined the first, high-resolution sea-surface temperature (SST) record across OAE-2 from a deep-marine sedimentary sequence at Ocean Drilling Program (ODP) Site 1276 in the mid-latitudinal Newfoundland Basin, NW Atlantic. By employing the organic palaeothermometer TEX86, we found that SSTs across the OAE-2 interval were extremely high, but were punctuated by a remarkably large cooling (5–11 °C), which is synchronous with the 2.5–5.5 °C cooling in SST records from equatorial Atlantic sites, and the “Plenus Cold Event”. Because this global cooling event is concurrent with increased organic carbon burial, it likely acted in response to the associated pCO2 drop. Our findings imply a substantial increase in the latitudinal SST gradient in the proto-North Atlantic during this period of global cooling and reduced atmospheric pCO2, suggesting a strong coupling between pCO2 and latitudinal thermal gradients under greenhouse climate conditions.},
	number = {1–2},
	urldate = {2013-07-01},
	journal = {Earth and Planetary Science Letters},
	author = {Sinninghe Damsté, Jaap S. and van Bentum, Elisabeth C. and Reichart, Gert-Jan and Pross, Jörg and Schouten, Stefan},
	month = apr,
	year = {2010},
	keywords = {Newfoundland basin, Ocean Drilling Program Site 1276, organic carbon burial, sea-surface temperature, TEX86 palaeothermometry},
	pages = {97--103}
}

@article{jarvis_black_2011,
	title = {Black shale deposition, atmospheric {CO}2 drawdown, and cooling during the {Cenomanian}-{Turonian} {Oceanic} {Anoxic} {Event}},
	volume = {26},
	copyright = {Copyright 2011 by the American Geophysical Union.},
	issn = {1944-9186},
	url = {http://onlinelibrary.wiley.com/doi/10.1029/2010PA002081/abstract},
	doi = {10.1029/2010PA002081},
	abstract = {Oceanic Anoxic Event 2 (OAE2), spanning the Cenomanian-Turonian boundary (CTB), represents one of the largest perturbations in the global carbon cycle in the last 100 Myr. The δ13Ccarb, δ13Corg, and δ18O chemostratigraphy of a black shale–bearing CTB succession in the Vocontian Basin of France is described and correlated at high resolution to the European CTB reference section at Eastbourne, England, and to successions in Germany, the equatorial and midlatitude proto-North Atlantic, and the U.S. Western Interior Seaway (WIS). Δ13C (offset between δ13Ccarb and δ13Corg) is shown to be a good pCO2 proxy that is consistent with pCO2 records obtained using biomarker δ13C data from Atlantic black shales and leaf stomata data from WIS sections. Boreal chalk δ18O records show sea surface temperature (SST) changes that closely follow the Δ13C pCO2 proxy and confirm TEX86 results from deep ocean sites. Rising pCO2 and SST during the Late Cenomanian is attributed to volcanic degassing; pCO2 and SST maxima occurred at the onset of black shale deposition, followed by falling pCO2 and cooling due to carbon sequestration by marine organic productivity and preservation, and increased silicate weathering. A marked pCO2 minimum (∼25\% fall) occurred with a SST minimum (Plenus Cold Event) showing {\textbackslash}textgreater4°C of cooling in ∼40 kyr. Renewed increases in pCO2, SST, and δ13C during latest Cenomanian black shale deposition suggest that a continuing volcanogenic CO2 flux overrode further drawdown effects. Maximum pCO2 and SST followed the end of OAE2, associated with a falling nutrient supply during the Early Turonian eustatic highstand.},
	language = {en},
	number = {3},
	urldate = {2013-07-01},
	journal = {Paleoceanography},
	author = {Jarvis, Ian and Lignum, John S. and Gröcke, Darren R. and Jenkyns, Hugh C. and Pearce, Martin A.},
	year = {2011},
	keywords = {black shales, Carbon cycle, CO2 drawdown, Cretaceous, Oceanic Anoxic Event 2, SST cooling},
	pages = {n/a--n/a}
}

